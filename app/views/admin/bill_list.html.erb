<% content_for :content do %>
<% if(@bills.count==0) %>
<h4>Không có đơn hàng</h4>
<% else %>
<table class="table border border-danger text-danger bg-light">
	<thead>
		<tr>
			<th scope="col">Ngày tạo đơn hàng</th>
			<th scope="col">Tên khách hàng</th>
			<th scope="col">Xem thông tin</th>
			<th scope="col">Xóa đơn hàng</th>
		</tr>
	</thead>
	<tbody>
		<% @bills.each do |bill| %>
		<tr>
			<th scope="row"><%= bill.created_at %></th>
			<td><%= bill.usernameUS %></td>
			<td>
				<form action="/bill_view">
					<input type="hidden" name="id" value="<%= bill.id %>">
					<button class="btn btn-sm btn-success" type="submit">&nbsp;&nbsp;&nbsp;&nbsp;Xem&nbsp;&nbsp;&nbsp;&nbsp;</button>
				</form>
			</td>
			<td><form action="/bill_delete">
				<input type="hidden" name="id" value="<%= bill.id %>">
				<button class="btn btn-sm btn-danger" type="submit" onclick="return confirm('Xóa đơn hàng này?');">&nbsp;&nbsp;&nbsp;&nbsp;
				Xoá&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</button>
			</form></td>
		</tr>
		<% end %>
	</tbody>
</table>
<% end %>
<% end %>	