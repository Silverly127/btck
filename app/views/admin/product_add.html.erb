<% content_for :content do %>
	<div class="container">
		<hr class="border-danger">
		<h2>Thêm sản phẩm</h2><br>
		<form action="product_add_xl" method="post">
			<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
			<div class="form-group">
				<label>Tên sản phẩm :</label>
				<input type="text" class="form-control" autocomplete="off" name="sp[nameSP]" value="" style="width: 50%">
			</div>
			<div class="form-group">
				<label>Link ảnh sản phẩm :</label>
				<input type="text" class="form-control" name="sp[imgSP]" value="" style="width: 50%">
			</div>
			<button type="submit" class="btn btn-danger">Thêm sản phẩm</button>
		</form>
	</div>
<% end %>