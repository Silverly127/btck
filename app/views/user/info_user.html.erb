<% content_for :content do %>
<br>
<div class="container">
	<hr class="border-danger">
	<h2>Thông tin người dùng</h2><br>
	<div class="row">
		<div class="col-lg-6">
			<form action="info_xl" method="post">
				<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
				<div class="form-group">
					<label>Ảnh đại diện:</label><br>
					<img src="<%= @user.imgUS %>" width="100px"><br><br>
					<label>Cập nhật link ảnh:</label>
					<input type="text" class="form-control" name="imgUS" value="<%= @user.imgUS %>" style="width: 50%" required="on">
				</div>
				<div class="form-group">
					<label>Email:</label>
					<input type="email" class="form-control" name="email" value="<%= @user.email %>" style="width: 50%" required="on">
				</div>
				<button type="submit" class="btn btn-danger">Cập nhật</button>
			</form>
		</div>
		<div class="col-lg-6">
			<form action="change_pass" method="post">
				<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
				<h3>Cập nhật mật khẩu:</h3><br>
				<div class="form-group">
					<label>Mật khẩu cũ:</label>
					<input type="password" class="form-control" name="oldpass"  style="width: 50%" required="on">
				</div>
				<div class="form-group">
					<label>Mật khẩu mới:</label>
					<input type="password" class="form-control" name="newpass"  style="width: 50%" required="on">
				</div>
				<div class="form-group">
					<label>Xác nhận mật khẩu mới:</label>
					<input type="password" class="form-control" name="newpass2"  style="width: 50%" required="on">
				</div>
				<button type="submit" class="btn btn-danger">Đổi mật khẩu</button>
			</form>
		</div>
	</div>
</div>
<br>
<% end %>
